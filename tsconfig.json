{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",

    /* Modules */
    "module": "commonjs",

    /* Type Checking */
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    /* Paths and Aliases */
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["lib/*"],
      "@routes/*": ["routes/*"],
      "@routes": ["routes"],
      "@types/*": ["types/*"],
      "@middlewares/*": ["middlewares/*"],
      "@controllers/*": ["controllers/*"],
      "@models": ["database/models/index.ts"],
      "@models/*": ["database/models/*"],
      "@services/*": ["services/*"],
      "@repositories/*": ["repositories/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"],
      "@validations/*": ["validations/*"]
    },
    "moduleResolution": "node",
    "typeRoots": ["types", "./node_modules/@types"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
